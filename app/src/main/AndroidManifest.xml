<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pideruben.guineaproject">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GuineaProject"
        android:networkSecurityConfig="@xml/network_security_config">

        <activity
            android:name=".application.login.PostLoginActivity"
            android:exported="false" />
        <activity
            android:name=".application.MainActivity"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".application.login.LoginActivity"
            android:theme="@style/Theme.Design.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".application.old_mainAcrt"
            android:theme="@style/Theme.Design.NoActionBar" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
</manifest>