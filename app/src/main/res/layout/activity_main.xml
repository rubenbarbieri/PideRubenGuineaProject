<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".application.MainActivity"
    android:background="@color/main_bg_color">

    <Spinner
        android:id="@+id/spFrom"
        android:layout_width="240dp"
        android:layout_height="23dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/dw_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tx_date"
        android:layout_width="240dp"
        android:layout_height="23dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:background="@drawable/dw_spinner"
        android:drawableRight="@drawable/calendar"
        android:fontFamily="@font/poppins_medium"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text="Date"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/spTo" />

    <Spinner
        android:id="@+id/spTo"
        android:layout_width="240dp"
        android:layout_height="23dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/dw_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spFrom" />

    <TextView
        android:id="@+id/tx_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_medium"
        android:text="To:"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.141"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_from" />

    <TextView
        android:id="@+id/tx_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:fontFamily="@font/poppins_medium"
        android:text="From:"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/textview_prova"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />


    <Button
        android:id="@+id/buttonShow"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_marginBottom="31dp"
        android:background="@drawable/confirm_button"
        android:fontFamily="@font/poppins_semibold"
        android:text="Confirm Ride"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Adults (16+)"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Children (0-15)"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038"
        app:srcCompat="@drawable/ic_menu" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Date:"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_to" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_date"
        app:srcCompat="@drawable/separator" />

    <TextView
        android:id="@+id/nAdults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:background="@drawable/small_rectangle"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.367"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/plusAdults"
        android:layout_width="32dp"
        android:layout_height="23dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="19dp"
        android:background="#00FFFFFF"
        android:text="+"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/nAdults"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/minusAdults"
        android:layout_width="32dp"
        android:layout_height="23dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/poppins_medium"
        android:text="-"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/nAdults"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/nChildren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:background="@drawable/small_rectangle"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/nAdults" />

    <Button
        android:id="@+id/plusChildren"
        android:layout_width="32dp"
        android:layout_height="23dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="19dp"
        android:background="#00FFFFFF"
        android:text="+"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/nChildren"
        app:layout_constraintTop_toBottomOf="@+id/plusAdults" />

    <Button
        android:id="@+id/minusChildren"
        android:layout_width="32dp"
        android:layout_height="23dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/poppins_medium"
        android:text="-"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/nChildren"
        app:layout_constraintTop_toBottomOf="@+id/minusAdults" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Student"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/nStudents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:background="@drawable/small_rectangle"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/nChildren" />

    <Button
        android:id="@+id/plusStudent"
        android:layout_width="32dp"
        android:layout_height="23dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="19dp"
        android:background="#00FFFFFF"
        android:text="+"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/nStudents"
        app:layout_constraintTop_toBottomOf="@+id/plusChildren" />

    <Button
        android:id="@+id/minusStudent"
        android:layout_width="32dp"
        android:layout_height="23dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/poppins_medium"
        android:text="-"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/nStudents"
        app:layout_constraintTop_toBottomOf="@+id/minusChildren" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Invalid"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/nInvalid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:background="@drawable/small_rectangle"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nStudents" />

    <Button
        android:id="@+id/plusInvalid"
        android:layout_width="32dp"
        android:layout_height="23dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="19dp"
        android:background="#00FFFFFF"
        android:text="+"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/nInvalid"
        app:layout_constraintTop_toBottomOf="@+id/plusStudent" />

    <Button
        android:id="@+id/minusInvalid"
        android:layout_width="32dp"
        android:layout_height="23dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/poppins_medium"
        android:text="-"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/nInvalid"
        app:layout_constraintTop_toBottomOf="@+id/minusStudent" />

    <TextView
        android:id="@+id/tx_luggage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/black"
        android:text="Luggage"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/tx_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Big"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_luggage" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Medium"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_big" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Small"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/nBigLuggage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/small_rectangle"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_luggage" />

    <Button
        android:id="@+id/plusBigLuggage"
        android:layout_width="32dp"
        android:layout_height="23dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="18dp"
        android:background="#00FFFFFF"
        android:text="+"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/nBigLuggage"
        app:layout_constraintTop_toBottomOf="@+id/tx_luggage" />

    <Button
        android:id="@+id/minusBigLuggage"
        android:layout_width="32dp"
        android:layout_height="23dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/poppins_medium"
        android:text="-"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/nBigLuggage"
        app:layout_constraintTop_toBottomOf="@+id/tx_luggage" />

    <TextView
        android:id="@+id/nMediumLuggage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:background="@drawable/small_rectangle"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nBigLuggage" />

    <Button
        android:id="@+id/minusMediumLuggage"
        android:layout_width="32dp"
        android:layout_height="23dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/poppins_medium"
        android:text="-"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/nMediumLuggage"
        app:layout_constraintTop_toBottomOf="@+id/minusBigLuggage" />

    <Button
        android:id="@+id/plusMediumLuggage"
        android:layout_width="32dp"
        android:layout_height="23dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="19dp"
        android:background="#00FFFFFF"
        android:text="+"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/nMediumLuggage"
        app:layout_constraintTop_toBottomOf="@+id/plusBigLuggage" />

    <TextView
        android:id="@+id/nSmallLuggage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:background="@drawable/small_rectangle"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nMediumLuggage" />

    <Button
        android:id="@+id/plusSmallLuggage"
        android:layout_width="32dp"
        android:layout_height="23dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="19dp"
        android:background="#00FFFFFF"
        android:text="+"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/nSmallLuggage"
        app:layout_constraintTop_toBottomOf="@+id/plusMediumLuggage" />

    <Button
        android:id="@+id/minusSmallLuggage"
        android:layout_width="32dp"
        android:layout_height="23dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/poppins_medium"
        android:text="-"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/nSmallLuggage"
        app:layout_constraintTop_toBottomOf="@+id/minusMediumLuggage" />
</androidx.constraintlayout.widget.ConstraintLayout>